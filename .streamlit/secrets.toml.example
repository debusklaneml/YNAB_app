# Copy this file to secrets.toml and add your YNAB Personal Access Token
# Get your token from: YNAB Settings > Developer Settings > Personal Access Tokens

YNAB_ACCESS_TOKEN = "your-token-here"

[alert_thresholds]
unusual_spending_warning = 2.5
unusual_spending_critical = 3.5
budget_approaching = 0.90
recurring_days_warning = 3
recurring_days_critical = 7
